{
  "name": "estilo-y-moda-ecomerce",
  "version": "1.0.0",
  "description": "Sistema de e-commerce con microservicios - Estilo y Moda",
  "scripts": {
    "start": "node start.js",
    "dev": "node start.js",
    "dev-completo": "node iniciar-todos-servicios.js",
    "setup": "node setup_completo.js",
    "backend": "cd backend && npm run desarrollo",
    "frontend": "cd frontend && npm run dev",
    "test-armonizacion": "node test-armonizacion.js",
    "auth-service": "cd backend/services/auth-service && npm run desarrollo",
    "catalog-service": "cd backend/services/catalog-service && python src/main-completo.py",
    "transaction-service": "cd backend/services/transaction-service && node src/servidor.js",
    "social-service": "cd backend/services/social-service && node src/servidor-completo.js",
    "marketing-service": "cd backend/services/marketing-service && node src/servidor-completo.js",
    "ai-service": "cd backend/services/ai-service && python src/main-completo.py"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "concurrently": "^8.2.2",
    "mongodb": "^6.21.0",
    "pg": "^8.16.3"
  }
}
