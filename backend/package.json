{
  "name": "backend-ecommerce",
  "version": "1.0.0",
  "description": "Backend para e-commerce con microservicios",
  "scripts": {
    "iniciar": "node api-gateway/src/servidor.js",
    "desarrollo": "nodemon api-gateway/src/servidor.js",
